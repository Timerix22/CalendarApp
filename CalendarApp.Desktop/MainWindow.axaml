<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarApp.Desktop"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CalendarApp.Desktop.MainWindow"
        Title="CalendarApp.Desktop">
    <Grid>
        <Grid.RowDefinitions>
            10
            50
            *
            10
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            10 * 10
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>* * *</Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Content="Previous month"/>
            <Button Grid.Row="0" Grid.Column="2" Content="Next month" HorizontalAlignment="Right"/>
        </Grid>
        <local:MyCalendarMonthView Grid.Row="2" Grid.Column="1"/>
    </Grid>
</Window>
